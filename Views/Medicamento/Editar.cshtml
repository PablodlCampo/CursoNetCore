@model CursoNetCore.Clases.MedicamentoCLS

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>MedicamentoCLS</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar" asp-controller="Medicamento" id="formMedicamento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMedicamento" class="control-label"></label>
                <input asp-for="IdMedicamento" class="form-control" />
                <span asp-validation-for="IdMedicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFormaFarmaceutica"> </label>
                <select asp-for="IdFormaFarmaceutica" class="form form-control" asp-items="ViewBag.listaFarmaceutica">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreFarmaceutica" class="control-label"></label>
                <input asp-for="NombreFarmaceutica" class="form-control" />
                <span asp-validation-for="NombreFarmaceutica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concentracion" class="control-label"></label>
                <input asp-for="Concentracion" class="form-control" />
                <span asp-validation-for="Concentracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presentacion" class="control-label"></label>
                <input asp-for="Presentacion" class="form-control" />
                <span asp-validation-for="Presentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function Guardar() {
        modalGuardar().then((result) => {
            if (result.isConfirmed) {
                $("#formMedicamento").submit();
            }
        })
    }
</script>

