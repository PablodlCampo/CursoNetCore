@using CursoNetCore.Clases;
@model MedicamentoCLS
@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar</h1>

<hr />

<div class="row">

    <div class="col-md-6">

        <form asp-action="Guardar" asp-controller="Medicamento" id="formMedicamento">
            <div class="form-group">
                <label asp-for="Nombre"> </label>
                <input type="text" class="form form-control" asp-for="Nombre" />
                <span asp-validation-for="Nombre"></span>
            </div>

            <div class="form-group">
                <label asp-for="Concentracion"> </label>
                <input type="text" class="form form-control" asp-for="Concentracion" />
            </div>

            <div class="form-group">
                <label asp-for="IdFormaFarmaceutica"> </label>
                <select asp-for="IdFormaFarmaceutica" class="form form-control" asp-items="ViewBag.listaFarmaceutica">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Precio"> </label>
                <input type="text" class="form form-control" asp-for="Precio" />
                <span asp-validation-for="Precio"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock"> </label>
                <input type="text" class="form form-control" asp-for="Stock" />
                <span asp-validation-for="Stock"></span>
            </div>

            <div class="form-group">
                <label asp-for="Presentacion"> </label>
                <input type="text" class="form form-control" asp-for="Presentacion" />
                <span asp-validation-for="Presentacion"></span>
            </div>

            <div class="form-group">
                <input type="button"
                       onclick="Guardar()"
                       value="Crear"
                       class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </form>

    </div>
</div>

<script>
    function Guardar() {
        modalGuardar().then((result) => {
            if (result.isConfirmed) {
                $("#formMedicamento").submit();
            }
        })
    }
</script>